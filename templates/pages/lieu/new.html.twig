{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Cr√©ation d'un nouveau lieu</h1>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nomLieu) }}
            {{ form_widget(form.nomLieu) }}
            <div class="form-error">
                {{ form_errors(form.nomLieu) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.typeLieu) }}
            {{ form_widget(form.typeLieu) }}
            <div class="form-error">
                {{ form_errors(form.typeLieu) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.numeroTelLieu) }}
            {{ form_widget(form.numeroTelLieu) }}
            <div class="form-error">
                {{ form_errors(form.numeroTelLieu) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.emailLieu) }}
            {{ form_widget(form.emailLieu) }}
            <div class="form-error">
                {{ form_errors(form.emailLieu) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.urlLieu) }}
            {{ form_widget(form.urlLieu) }}
            <div class="form-error">
                {{ form_errors(form.urlLieu) }}
            </div>
        </div>
        <div class="form-group" style="max-width: 30%">
            {{ form_row(form.imageFile)}}
        </div>
        <div class="form-group">
            {{ form_row(form.submit)}}
        </div>

        {{ form_end(form)  }}
    </div>
{% endblock %}